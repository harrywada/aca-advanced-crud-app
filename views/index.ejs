<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />

    <title>Harry Wada's Blog</title>
    <link rel="stylesheet" type="text/css" href="css/css-reset.css" />
    <link rel="stylesheet" type="text/css" href="css/style.css" />
  </head>
  <body>
    <div id="alert">
      <span></span>
      <button>&#x2715;</button>
    </div>

    <div id="nav">
      <div id="add">
        <button id="create">+</button>
      </div>
      <ul id="posts"></ul>
    </div>

    <div id="view">
      <div id="edit-view" class="view">
        <input class="title" type="text" name="title" placeholder="title" />
        <textarea class="content" rows="25" cols="50"></textarea>
        <button class="submit">submit</button>
      </div>
      <div id="read-view" class="view">
        <h1 class="title"></h1>
        <p class="content"></p>
      </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.1.0.min.js"></script>
    <script src="js/script.js"></script>
  </body>
</html>
